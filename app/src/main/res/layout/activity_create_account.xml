<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="curatetechnologies.com.curate.presentation.ui.views.activities.CreateAccountActivity">

    <ImageView
        android:id="@+id/activity_create_account_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/activity_create_account_logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:tint="@color/white"
        android:src="@drawable/white_logo"/>

    <TextView
        android:id="@+id/activity_create_account_curate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_create_account_logo"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/bebas"
        android:text="CURATE"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/facebook_button_layout"/>

    <FrameLayout
        android:id="@+id/facebook_button_layout"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="4dp">

        <com.facebook.login.widget.LoginButton
            android:id="@+id/btn_login_facebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btn_login_facebook_custom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#4267B2"
            android:textColor="#FFFFFF"
            android:text="Create Account with Facebook"
            android:textAllCaps="false" />

    </FrameLayout>


    <Button
        android:id="@+id/btn_login_google_custom"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/facebook_button_layout"
        android:layout_centerHorizontal="true"
        android:layout_margin="4dp"
        android:background="#FAFAFA"
        android:textColor="#7F7F7F"
        android:text="Create Account with Google"
        android:textAllCaps="false" />
    
    <Button
        android:id="@+id/btn_login_email"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Create Account with Email"
        android:layout_below="@+id/btn_login_google_custom"
        android:layout_centerHorizontal="true"
        android:layout_margin="4dp"
        android:background="#FAFAFA"
        android:textColor="#7F7F7F"
        android:textAllCaps="false" />

</RelativeLayout>
