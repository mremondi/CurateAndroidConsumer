<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/fragment_restaurant_logo_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">

            <ImageView
                android:id="@+id/fragment_restaurant_logo"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:padding="16dp"
                android:background="@color/colorPrimary"/>

            <android.support.v7.widget.Toolbar
                android:id="@+id/fragment_restaurant_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:theme="@style/ThemeOverlay.AppCompat.ActionBar"
                android:background="@android:color/transparent">
                <RelativeLayout
                    android:id="@+id/search_bar_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10">
                </RelativeLayout>
            </android.support.v7.widget.Toolbar>

        </FrameLayout>

        <ProgressBar
            android:id="@+id/fragment_restaurant_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/fragment_restaurant_open_closed_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/lightGray"
            android:textAlignment="center"
            android:layout_below="@id/fragment_restaurant_logo_frame"
            android:textStyle="bold"
            android:text="OPEN"/>

        <TextView
            android:id="@+id/fragment_restaurant_todays_hours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/lightGray"
            android:textAlignment="center"
            android:layout_below="@id/fragment_restaurant_open_closed_text"
            android:text="9:00am - 4:00pm"/>

        <View
            android:id="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/fragment_restaurant_todays_hours"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="120dp"
            android:layout_marginStart="120dp"
            android:layout_marginRight="120dp"
            android:layout_marginEnd="120dp"
            android:background="@color/greyBorder" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragment_restaurant_menu_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider1"
            android:scrollbars="vertical"/>

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/fragment_restaurant_menu_recyclerview"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="120dp"
            android:layout_marginStart="120dp"
            android:layout_marginRight="120dp"
            android:layout_marginEnd="120dp"
            android:background="@color/greyBorder" />

        <include
            android:id="@+id/button_row"
            layout="@layout/fragment_restaurant_button_row"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/divider2" />

        <View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/button_row"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="120dp"
            android:layout_marginStart="120dp"
            android:layout_marginRight="120dp"
            android:layout_marginEnd="120dp"
            android:background="@color/greyBorder" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragment_restaurant_photos_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider3"
            android:background="@color/white"
            android:scrollbars="vertical"
            android:nestedScrollingEnabled="false"/>
    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>

