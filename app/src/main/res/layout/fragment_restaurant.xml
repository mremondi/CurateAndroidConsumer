<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greyBackground">

    <ImageView
        android:id="@+id/fragment_restaurant_logo"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:padding="16dp"
        android:background="@color/white"
        android:layout_alignParentTop="true"/>
    
    <include
        android:id="@+id/button_row"
        layout="@layout/fragment_restaurant_button_row"
        android:layout_below="@id/fragment_restaurant_logo"
        android:layout_width="match_parent"
        android:layout_height="80dp"/>

    <TextView
        android:id="@+id/fragment_restaurant_menu_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textAlignment="center"
        android:textColor="@color/lightGray"
        android:layout_below="@id/button_row"
        android:text="MENUS"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragment_restaurant_menu_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_restaurant_menu_label"
        android:scrollbars="vertical"/>
</RelativeLayout>
