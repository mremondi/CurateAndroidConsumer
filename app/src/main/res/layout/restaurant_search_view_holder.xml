<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/restaurant_search_view_holder_restaurant_logo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>


        <TextView
            android:id="@+id/restaurant_search_view_holder_restaurant_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/restaurant_search_view_holder_restaurant_logo"
            app:layout_constraintStart_toEndOf="@+id/restaurant_search_view_holder_restaurant_logo"
            app:layout_constraintEnd_toStartOf="@id/restaurant_search_view_holder_restaurant_rating_pie"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="@color/textDark"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/restaurant_search_view_holder_restaurant_ordering_enabled"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/restaurant_search_view_holder_restaurant_name"
            app:layout_constraintStart_toEndOf="@+id/restaurant_search_view_holder_restaurant_logo"
            app:layout_constraintEnd_toEndOf="@id/restaurant_search_view_holder_restaurant_rating_pie"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/restaurant_search_view_holder_distance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:textColor="@color/distanceBlue"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@+id/restaurant_search_view_holder_restaurant_ordering_enabled"
            app:layout_constraintStart_toEndOf="@+id/restaurant_search_view_holder_restaurant_logo"
            app:layout_constraintEnd_toEndOf="@id/restaurant_search_view_holder_restaurant_rating_pie"/>

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/restaurant_search_view_holder_restaurant_rating_pie"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>