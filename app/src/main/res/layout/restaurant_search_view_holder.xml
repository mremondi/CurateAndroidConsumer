<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/restaurant_search_view_holder_restaurant_logo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/restaurant_search_view_holder_restaurant_logo"
            android:layout_toEndOf="@+id/restaurant_search_view_holder_restaurant_logo"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/restaurant_search_view_holder_restaurant_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/restaurant_search_view_holder_cuisine_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/lightGray"
                android:text="Mexican"/>

            <TextView
                android:id="@+id/restaurant_search_view_holder_item_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="@color/distanceBlue"
                android:text="0.0mi"/>

        </LinearLayout>

        <TextView
            android:id="@+id/item_search_view_holder_item_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="8dp"
            android:textStyle="normal"
            android:text="1.0"/>


    </RelativeLayout>
</android.support.v7.widget.CardView>