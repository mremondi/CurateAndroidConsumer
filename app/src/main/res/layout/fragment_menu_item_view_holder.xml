<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_marginBottom="1dp"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/menu_item_view_holder_item_info"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="16dp">

        <TextView
            android:id="@+id/menu_item_view_holder_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textSize="20sp"
            android:textColor="@color/textDark"
            android:lines="2"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/menu_item_view_holder_item_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_below="@+id/menu_item_view_holder_item_name"
            android:textSize="18sp"
            android:textColor="@color/lightGray"
            android:lines="2"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/menu_item_view_holder_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_below="@+id/menu_item_view_holder_item_description"
            android:textSize="20sp"
            android:textColor="@color/textDark" />

    </RelativeLayout>
    
    <ImageView
        android:id="@+id/menu_item_view_holder_item_picture"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/menu_item_view_holder_item_info"
        android:layout_toEndOf="@+id/menu_item_view_holder_item_info"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"/>

</RelativeLayout>