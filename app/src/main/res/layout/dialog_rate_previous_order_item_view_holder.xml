<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    
    <ImageView
        android:id="@+id/dialog_rate_order_vh_thumbnail"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="4dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/dialog_rate_order_vh_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/dialog_rate_order_vh_thumbnail"
        android:layout_toEndOf="@id/dialog_rate_order_vh_thumbnail"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <Button
            android:id="@+id/dialog_rate_order_vh_like"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/thumbs_up"
            android:layout_margin="4dp"/>

        <Button
            android:id="@+id/dialog_rate_order_vh_dislike"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="4dp"
            android:background="@drawable/thumbs_down"
            />
    </LinearLayout>


</RelativeLayout>