<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <ImageView
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:src="@drawable/white_logo"
        android:layout_centerHorizontal="true"
        android:layout_margin="4dp"
        android:padding="8dp"
        android:layout_above="@+id/fragment_onboarding_page1_instructions"/>
    
    <TextView
        android:id="@+id/fragment_onboarding_page1_instructions"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Tell us a bit about yourself so restaurants know who's ordering!"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_margin="4dp"
        android:padding="8dp"
        android:textAlignment="center"
        android:layout_above="@+id/fragment_onboarding_page1_username"/>

    <EditText
        android:id="@+id/fragment_onboarding_page1_username"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/white"
        android:layout_margin="4dp"
        android:padding="8dp"
        android:textAlignment="center"
        android:hint="username"/>

    <EditText
        android:id="@+id/fragment_onboarding_page1_first_name"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/fragment_onboarding_page1_username"
        android:background="@color/white"
        android:layout_margin="4dp"
        android:padding="8dp"
        android:textAlignment="center"
        android:hint="first name"/>

    <EditText
        android:id="@+id/fragment_onboarding_page1_last_name"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/fragment_onboarding_page1_first_name"
        android:background="@color/white"
        android:layout_margin="4dp"
        android:padding="8dp"
        android:textAlignment="center"
        android:hint="last name"/>
    
    <Button
        android:id="@+id/fragment_onboarding_page1_next_button"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:padding="8dp"
        android:layout_marginBottom="40dp"
        android:background="#dcb2b2b2"
        android:textColor="@color/white"
        android:text="Next"/>


</RelativeLayout>