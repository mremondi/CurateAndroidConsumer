<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/greyBackground">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/greyBackground">

        <android.support.v7.widget.Toolbar
            android:id="@+id/fragment_receipt_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@color/white">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/fragment_receipt_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textSize="30sp"
                    android:textColor="#000000"
                    android:text="Order Placed"/>
                <ImageView
                    android:id="@+id/fragment_receipt_order_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/order_placed_check_mark"
                    android:layout_toRightOf="@id/fragment_receipt_title"
                    android:layout_toEndOf="@id/fragment_receipt_title"/>
            </RelativeLayout>

        </android.support.v7.widget.Toolbar>

        <RelativeLayout
            android:id="@+id/fragment_receipt_restaurant_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:padding="16dp"
            android:layout_below="@id/fragment_receipt_toolbar"
            android:background="@color/white">

            <TextView
                android:id="@+id/fragment_receipt_pickup_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/textDark"
                android:text="Pick up at:"/>

            <ImageView
                android:id="@+id/fragment_receipt_restaurant_logo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/fragment_receipt_pickup_label"
                android:background="@color/white"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/fragment_receipt_restaurant_logo"
                android:layout_toEndOf="@id/fragment_receipt_restaurant_logo"
                android:layout_below="@id/fragment_receipt_pickup_label"
                android:layout_marginLeft="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fragment_receipt_restaurant_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/textDark"
                    android:text="Sofa Cafe"/>

                <TextView
                    android:id="@+id/fragment_receipt_restaurant_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/lightGray" />

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/fragment_receipt_recycler_view_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragment_receipt_restaurant_info"
            android:orientation="vertical">
            
            <TextView
                android:id="@+id/fragment_receipt_receipt_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="Receipt"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/fragment_receipt_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/fragment_receipt_subtotal_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_receipt_recycler_view_container"
            android:background="@color/white"
            android:layout_marginBottom="1dp"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="SUBTOTAL" />

            <TextView
                android:id="@+id/fragment_receipt_subtotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fragment_receipt_tax_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_receipt_subtotal_row"
            android:background="@color/white"
            android:layout_marginBottom="1dp"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="TAX" />

            <TextView
                android:id="@+id/fragment_receipt_tax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fragment_receipt_total_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_receipt_tax_row"
            android:background="@color/white"
            android:layout_marginBottom="1dp"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="@color/textDark"
                android:text="TOTAL" />

            <TextView
                android:id="@+id/fragment_receipt_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textColor="@color/textDark"
                />

        </RelativeLayout>

    </RelativeLayout>

</ScrollView>