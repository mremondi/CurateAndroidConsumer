<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:src="@drawable/white_logo"
        android:layout_centerHorizontal="true"
        android:layout_margin="4dp"
        android:padding="8dp"
        android:layout_above="@+id/fragment_onboarding_page2_instructions"/>

    <TextView
        android:id="@+id/fragment_onboarding_page2_instructions"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="What kind of foods do you generally enjoy?"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_margin="4dp"
        android:padding="8dp"
        android:textAlignment="center"
        android:layout_above="@+id/fragment_onboarding_page4_cards"/>

    <LinearLayout
        android:id="@+id/fragment_onboarding_page4_cards"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_centerInParent="true">
        <android.support.v7.widget.CardView
            android:id="@+id/healthy_card"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="2">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="4dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/fragment_onboarding_page4_label1"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/healthy"/>

                <TextView
                    android:id="@+id/fragment_onboarding_page4_label1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:text="Healthy" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        
        <android.support.v7.widget.CardView
            android:id="@+id/gluten_free_card"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="2">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="4dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/fragment_onboarding_page4_label2"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/glutenfree"/>

                <TextView
                    android:id="@+id/fragment_onboarding_page4_label2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:text="Gluten Free" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <android.support.v7.widget.CardView
            android:id="@+id/sweets_card"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="2">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="4dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/fragment_onboarding_page4_label3"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/sweets"/>

                <TextView
                    android:id="@+id/fragment_onboarding_page4_label3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:text="Sweets" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <Button
        android:id="@+id/fragment_onboarding_page4_next_button"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:padding="8dp"
        android:layout_marginBottom="40dp"
        android:background="@color/colorAccent"
        android:textColor="@color/white"
        android:text="Next"/>
</RelativeLayout>