<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal"
    android:background="@color/white"
    android:weightSum="3"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/white_view_background">

        <ImageView
            android:id="@+id/fragment_restaurant_iv_directions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_directions_black_24dp"
            android:tint="@color/lightGray"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/fragment_restaurant_iv_directions"
            android:textAlignment="center"
            android:textColor="@color/lightGray"
            android:text="Directions"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/white_view_background">

        <ImageView
            android:id="@+id/fragment_restaurant_iv_website"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:tint="@color/lightGray"
            android:src="@drawable/ic_website_black_24dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_below="@id/fragment_restaurant_iv_website"
            android:textColor="@color/lightGray"
            android:text="Website"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/white_view_background">

        <ImageView
            android:id="@+id/fragment_restaurant_iv_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_call_black_24dp"
            android:tint="@color/lightGray"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/fragment_restaurant_iv_call"
            android:textAlignment="center"
            android:text="Contact"
            android:textColor="@color/lightGray" />

    </RelativeLayout>
</LinearLayout>