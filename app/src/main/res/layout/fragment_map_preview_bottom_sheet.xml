<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/fragment_map_preview_restaurant_logo"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:maxHeight="120dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/fragment_map_preview_restaurant_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_map_preview_restaurant_logo"
        android:textSize="26sp"
        android:textStyle="bold"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:textColor="@color/textDark" />

    <TextView
        android:id="@+id/fragment_map_preview_ordering_enabled"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_below="@+id/fragment_map_preview_restaurant_name" />

    <TextView
        android:id="@+id/fragment_map_preview_distance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_below="@id/fragment_map_preview_ordering_enabled"/>

    <TextView
        android:id="@+id/fragment_map_preview_restaurant_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_below="@+id/fragment_map_preview_distance"
        android:layout_marginBottom="60dp"/>

</RelativeLayout>